# Application Configuration
APP_NAME=Wallet Service
APP_VERSION=1.0.0
DEBUG=False
ENVIRONMENT=development
APP_PORT=8000
SECRET_KEY=your-super-secret-key-change-in-production
SERVER_NAME=_

# Frontend/App URLs
APP_URL=https://api.wallet.com
DEV_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# Database Configuration
DB_TYPE=postgresql
DB_HOST=db
DB_PORT=5432
DB_USER=wallet_user
DB_PASS=wallet_password
DB_NAME=wallet_db
DATABASE_URL=postgresql+asyncpg://wallet_user:wallet_password@db:5432/wallet_db

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_TTL=900

# JWT Configuration
JWT_SECRET=your-jwt-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=48
JWT_REFRESH_EXPIRY_DAYS=30

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# Paystack Configuration
PAYSTACK_SECRET_KEY=sk_test_your_secret_key
PAYSTACK_PUBLIC_KEY=pk_test_your_public_key
PAYSTACK_WEBHOOK_SECRET=your_webhook_secret
PAYSTACK_API_URL=https://api.paystack.co
PAYSTACK_TIMEOUT=30

# API Keys Configuration
API_KEY_MAX_PER_USER=5
